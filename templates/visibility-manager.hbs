{{!--
  Modern ApplicationV2 template for per-token visibility manager
  Provides comprehensive interface for managing token visibility relationships
--}}

{{#if error}}
  <div class="notification error">
    <p>{{error}}</p>
  </div>
{{else}}
  
  {{!-- Observer Information with Mode Toggle - Always visible --}}
  <div class="observer-info">
    <div class="observer-image">
      <img src="{{observer.img}}" alt="{{observer.name}}" />
    </div>
    <div class="observer-content">
      <div class="observer-main">
        <button type="button" class="mode-toggle {{#if isObserverMode}}observer-active{{else}}target-active{{/if}}" data-action="toggleMode" title="Click to switch between Observer and Target modes">
          <div class="toggle-option {{#if isObserverMode}}active{{/if}}">
            <i class="fas fa-eye"></i>
            <span>Observer</span>
          </div>
          <div class="toggle-divider">|</div>
          <div class="toggle-option {{#if isTargetMode}}active{{/if}}">
            <i class="fas fa-user-secret"></i>
            <span>Target</span>
          </div>
        </button>
        <h3 class="observer-name">{{observer.name}}</h3>
        {{#if isObserverMode}}
          <p class="hint">How <em>{{observer.name}}</em> sees other tokens</p>
        {{else}}
          <p class="hint">How other tokens see <em>{{observer.name}}</em></p>
        {{/if}}
        
        {{!-- Encounter Filter Checkbox --}}
        {{#if showEncounterFilter}}
        <div class="encounter-filter-section">
          <label class="encounter-filter-checkbox">
            <input type="checkbox" {{#if encounterOnly}}checked{{/if}} data-action="toggleEncounterFilter" />
            <span class="encounter-filter-label">{{localize "PF2E_VISIONER.UI.ENCOUNTER_FILTER_TEXT"}}</span>
          </label>
        </div>
        {{/if}}
      </div>
      <div class="visibility-legend">
        <div class="legend-title">Legend</div>
        {{#each visibilityStates as |state|}}
          <div class="legend-item">
            <i class="{{state.icon}}" style="color: {{state.color}}"></i>
            <span>{{state.label}}</span>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

  {{!-- Scrollable tables area --}}
  <div class="tables-content">
    {{!-- Token Visibility Tables Split by Type --}}
  {{#if hasTargets}}
    
    {{!-- Player Characters Table --}}
    {{#if hasPCs}}
      <div class="table-section">
        <div class="table-section-header">
          <div class="header-left">
            <i class="fas fa-users"></i>
            <span>Player Characters</span>
          </div>
          <div class="bulk-actions-header">
            {{#each visibilityStates as |state|}}
              <button type="button" class="bulk-state-header" data-action="bulkPC{{capitalize state.key}}" data-state="{{state.key}}" data-target-type="pc" title="Set all PCs as {{state.label}}">
                <i class="{{state.icon}}"></i>
              </button>
            {{/each}}
          </div>
        </div>
        <div class="visibility-table-container">
          <table class="visibility-table">
            <thead>
              <tr>
                <th class="token-image">Token</th>
                <th class="token-name">Name</th>
                <th class="visibility-state">{{localize "PF2E_VISIONER.VISIBILITY_MANAGER.VISIBILITY_STATE"}}</th>
                <th class="current-state">Current State</th>
                <th class="mechanical-effects">Effects</th>
              </tr>
            </thead>
            <tbody>
              {{#each pcTargets as |target|}}
                <tr class="token-row pc-row" data-token-id="{{target.id}}">
                  <td class="token-image">
                    <img src="{{target.img}}" alt="{{target.name}}" width="28" height="28" />
                  </td>
                  <td class="token-name">
                    <strong title="{{target.name}}">{{target.name}}</strong>
                  </td>
                  <td class="visibility-state">
                    <div class="icon-selection" data-target="{{target.id}}">
                      {{#each target.states as |state|}}
                        <button type="button" class="state-icon {{#if state.selected}}selected{{/if}}" 
                                data-state="{{state.value}}" data-target="{{target.id}}" 
                                title="{{state.label}}" style="color: {{state.color}}">
                          <i class="{{state.icon}}"></i>
                        </button>
                      {{/each}}
                      <input type="hidden" name="visibility.{{target.id}}" value="{{target.currentState}}" />
                    </div>
                  </td>
                  <td class="current-state">
                    {{#each target.states as |state|}}
                      {{#if state.selected}}
                        <span class="state-indicator" style="color: {{state.color}}">
                          <i class="{{state.icon}}"></i>
                          {{state.label}}
                        </span>
                      {{/if}}
                    {{/each}}
                  </td>
                  <td class="mechanical-effects">
                    {{#if (eq target.currentState "hidden")}}
                      <span class="flat-check" title="{{localize 'PF2E_VISIONER.MECHANICAL_EFFECTS.HIDDEN_TOOLTIP'}}">
                        <i class="fas fa-dice-d20"></i> DC 11 flat check
                      </span>
                    {{else if (eq target.currentState "concealed")}}
                      <span class="concealed-effect" title="{{localize 'PF2E_VISIONER.MECHANICAL_EFFECTS.CONCEALED_TOOLTIP'}}">
                        <i class="fas fa-dice-d20"></i> DC 5 flat check
                      </span>
                    {{else if (eq target.currentState "undetected")}}
                      <span class="undetected-effect" title="{{localize 'PF2E_VISIONER.MECHANICAL_EFFECTS.UNDETECTED_TOOLTIP'}}">
                        <i class="fas fa-question-circle"></i> Location unknown
                      </span>
                    {{else}}
                      <span class="no-effect" title="{{localize 'PF2E_VISIONER.MECHANICAL_EFFECTS.VISIBLE_TOOLTIP'}}">
                        <i class="fas fa-check-circle"></i> No effects
                      </span>
                    {{/if}}
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    {{/if}}

    {{!-- NPCs Table --}}
    {{#if hasNPCs}}
      <div class="table-section">
        <div class="table-section-header">
          <div class="header-left">
            <i class="fas fa-dragon"></i>
            <span>NPCs</span>
          </div>
          <div class="bulk-actions-header">
            {{#each visibilityStates as |state|}}
              <button type="button" class="bulk-state-header" data-action="bulkNPC{{capitalize state.key}}" data-state="{{state.key}}" data-target-type="npc" title="Set all NPCs as {{state.label}}">
                <i class="{{state.icon}}"></i>
              </button>
            {{/each}}
          </div>
        </div>
        <div class="visibility-table-container">
          <table class="visibility-table">
            <thead>
              <tr>
                <th class="token-image">Token</th>
                <th class="token-name">Name</th>
                <th class="visibility-state">{{localize "PF2E_VISIONER.VISIBILITY_MANAGER.VISIBILITY_STATE"}}</th>
                <th class="current-state">Current State</th>
                <th class="mechanical-effects">Effects</th>
              </tr>
            </thead>
            <tbody>
              {{#each npcTargets as |target|}}
                <tr class="token-row npc-row {{target.dispositionClass}}-npc" data-token-id="{{target.id}}">
                  <td class="token-image">
                    <img src="{{target.img}}" alt="{{target.name}}" width="28" height="28" />
                  </td>
                  <td class="token-name">
                    <strong title="{{target.name}}">{{target.name}}</strong>
                  </td>
                  <td class="visibility-state">
                    <div class="icon-selection" data-target="{{target.id}}">
                      {{#each target.states as |state|}}
                        <button type="button" class="state-icon {{#if state.selected}}selected{{/if}}" 
                                data-state="{{state.value}}" data-target="{{target.id}}" 
                                title="{{state.label}}" style="color: {{state.color}}">
                          <i class="{{state.icon}}"></i>
                        </button>
                      {{/each}}
                      <input type="hidden" name="visibility.{{target.id}}" value="{{target.currentState}}" />
                    </div>
                  </td>
                  <td class="current-state">
                    {{#each target.states as |state|}}
                      {{#if state.selected}}
                        <span class="state-indicator" style="color: {{state.color}}">
                          <i class="{{state.icon}}"></i>
                          {{state.label}}
                        </span>
                      {{/if}}
                    {{/each}}
                  </td>
                  <td class="mechanical-effects">
                    {{#if (eq target.currentState "hidden")}}
                      <span class="flat-check" title="{{localize 'PF2E_VISIONER.MECHANICAL_EFFECTS.HIDDEN_TOOLTIP'}}">
                        <i class="fas fa-dice-d20"></i> DC 11 flat check
                      </span>
                    {{else if (eq target.currentState "concealed")}}
                      <span class="concealed-effect" title="{{localize 'PF2E_VISIONER.MECHANICAL_EFFECTS.CONCEALED_TOOLTIP'}}">
                        <i class="fas fa-dice-d20"></i> DC 5 flat check
                      </span>
                    {{else if (eq target.currentState "undetected")}}
                      <span class="undetected-effect" title="{{localize 'PF2E_VISIONER.MECHANICAL_EFFECTS.UNDETECTED_TOOLTIP'}}">
                        <i class="fas fa-question-circle"></i> Location unknown
                      </span>
                    {{else}}
                      <span class="no-effect" title="{{localize 'PF2E_VISIONER.MECHANICAL_EFFECTS.VISIBLE_TOOLTIP'}}">
                        <i class="fas fa-check-circle"></i> No effects
                      </span>
                    {{/if}}
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    {{/if}}
    
  {{else}}
    <div class="no-targets">
      <p>{{localize "PF2E_VISIONER.VISIBILITY_MANAGER.NO_TOKENS"}}</p>
    </div>
  {{/if}}
  </div>

  {{!-- Action Buttons --}}
  <footer class="sheet-footer flexrow">
    <button type="button" class="action-button apply" data-action="apply">
      <i class="fas fa-check"></i>
      {{localize "PF2E_VISIONER.VISIBILITY_MANAGER.APPLY"}}
    </button>
    <button type="button" class="action-button reset" data-action="reset">
      <i class="fas fa-undo"></i>
      {{localize "PF2E_VISIONER.VISIBILITY_MANAGER.RESET"}}
    </button>
    <button type="button" class="action-button cancel" data-action="close">
      <i class="fas fa-times"></i>
      {{localize "PF2E_VISIONER.VISIBILITY_MANAGER.CANCEL"}}
    </button>
  </footer>

{{/if}}